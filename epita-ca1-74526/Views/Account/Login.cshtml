@using epita_ca1_74526.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Log in to your account</h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                @if (User.IsInRole("admin"))
                {
                    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Create Customer</a>
                }
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="firstName" class="control-label"></label>
                        <input asp-for="firstName" class="form-control">
                        <span asp-validation-for="firstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="lastName" class="control-label"></label>
                        <input asp-for="lastName" class="form-control">
                        <span asp-validation-for="lastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NameAccount" class="control-label"></label>
                        <input asp-for="NameAccount" class="form-control" />
                        <span asp-validation-for="NameAccount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float right" type="submit" value="Log in" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
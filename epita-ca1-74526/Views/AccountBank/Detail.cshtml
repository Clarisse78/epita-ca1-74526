@model epita_ca1_74526.ViewModels.DetailAccountBankViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewData["Title"] = "AccountBank Details";
}

<div class="album py-5 bg-light">
    <div class="container">
        <h1>Account number: @Model.AccountBank.Name</h1>

        <div class="row">
            <div class="col-md-4">

                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                        <p class="card-text">Account: @Model.AccountBank.accountType</p>
                        <p class="card-text">Balance: @Model.AccountBank.Balance</p>
                    </div>
                </div>
            </div>
              
            <h2>Historic transactions</h2>

            @foreach (var item in Model.TransactionsAccount)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">

                        <div class="card-body">
                            <p class="card-text">Title: @item.Title</p>
                            <p class="card-text">Type of transaction: @item.transactionType</p>
                            <p class="card-text">Amount: @item.Amount</p>
                            <p class="card-text">Final Balance: @item.Balance</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="@Url.Action("Detail", "Transaction", new { id = item.Id })" class="btn btn-sm btn-outline-secondary">Details</a>
                                </div>
                                <small class="text-muted">Date: @item.Date</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
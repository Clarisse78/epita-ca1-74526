@{
}


<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">

                    <div class="card-body">
                        <p class="card-text">Account: @Model.accountType</p>
                        <p class="card-text">Balance: @Model.Balance</p>
                    </div>
                </div>
            </div>
              
            <h1>Historic transactions</h1>

            @foreach (var item in Model.transactions)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">

                        <div class="card-body">
                            <p class="card-text">Title: @item.Title</p>
                            <p class="card-text">Type of transaction: @item.transactionType</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="@Url.Action("Detail", "Transaction", new { id = item.Id })" class="btn btn-sm btn-outline-secondary">Details</a>
                                </div>
                                <small class="text-muted">Date: @item.Date</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>